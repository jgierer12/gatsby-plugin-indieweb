{
  "name": "gatsby-plugin-indieweb",
  "version": "1.0.0",
  "description": "IndieWeb-ify your Gatsby site",
  "repository": "https://github.com/jgierer12/gatsby-plugin-indieweb",
  "author": "Jonas Gierer <hello@jonasgierer.com>",
  "license": "MIT",
  "scripts": {
    "test": "run-s lint",
    "format": "run-p --print-label format:*",
    "format:js": "run-s \"_eslint -- --fix\"",
    "format:other": "run-s \"_prettier -- --write\"",
    "lint": "run-p --print-label --continue-on-error lint:*",
    "lint:js": "run-s _eslint",
    "lint:other": "run-s _prettier",
    "_eslint": "eslint --color --ignore-path .gitignore \"**/*.js\"",
    "_prettier": "prettier --check --ignore-path .gitignore \"**/*.{json,md,mdx,yml,graphql}\""
  },
  "devDependencies": {
    "@jgierer12/js-configs": "^0.1.1",
    "deepmerge": "^3.2.0",
    "eslint": "^5.16.0",
    "np": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4"
  },
  "peerDependencies": {
    "gatsby": ">=2",
    "react": ">=16"
  }
}
